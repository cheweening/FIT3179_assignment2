
{
  "$schema":  "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "title": "Happiness By Region (2019)",
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/cheweening/FIT3179_assignment2/main/data/2019.csv"
  },
  "mark": {
    "type": "bar",
    "stroke": "black",
    "cursor": "pointer"
  },
  "params": [
    {
      "name": "highlight",
      "select": {"type": "point", "on": "mouseover"}
    },
    {"name": "select", "select": "point"}
  ],
  "encoding": {
    "color": {
      "field": "Continent", 
      "type": "nominal",
      "scale": 
              {"range": ["#c1e7e3","#c6e2e9","#a7bed3","#c1bbdd","#ffcaaf","#ecc9c7"]}
      },
    "x": {"field": "Continent", "type": "nominal"},
    "y": {"aggregate":"average" ,"field": "Score", "type": "quantitative"},
    "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"aggregate":"average" ,"field": "Score", "type": "quantitative", "format": ","}
        ],
        "fillOpacity": {
          "condition": {"param": "select", "value": 1},
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        }
  },
  "config": {
    "scale": {
      "bandPaddingInner": 0.2
    }
  }
}
